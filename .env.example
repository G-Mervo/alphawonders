#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'https://alphawonders.com/'
app.forceGlobalSecureRequests = true
app.defaultLocale = 'en'
app.negotiateLocale = false
app.supportedLocales = ['en']
app.appTimezone = 'Africa/Nairobi'
app.charset = 'UTF-8'

#--------------------------------------------------------------------
# DATABASE (PostgreSQL â€” shared container on shared-services network)
#--------------------------------------------------------------------
database.default.hostname = postgres
database.default.database = alphaw
database.default.username = alphaw_user
database.default.password = CHANGE_ME
database.default.DBDriver = Postgre
database.default.port = 5432
database.default.DBPrefix = ''
database.default.charset = 'utf8'

#--------------------------------------------------------------------
# DOCKER VARS (used by docker-compose.yml)
#--------------------------------------------------------------------
GITHUB_REPO = G-Mervo/alphawonders
DB_DATABASE = alphaw
DB_USERNAME = alphaw_user
DB_PASSWORD = CHANGE_ME
APP_BASE_URL = https://alphawonders.com/

#--------------------------------------------------------------------
# EMAIL (SMTP)
#--------------------------------------------------------------------
SMTP_HOST = smtp.example.com
SMTP_USER = your-email@example.com
SMTP_PASS = your-smtp-password
SMTP_PORT = 587
SMTP_CRYPTO = tls
SMTP_FROM_EMAIL = noreply@alphawonders.com
SMTP_FROM_NAME = Alphawonders
